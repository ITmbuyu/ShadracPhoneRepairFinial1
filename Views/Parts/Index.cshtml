@model IEnumerable<ShadracPhoneRepairFinial1.Models.Parts>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/BlankLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Part_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Part_Cost)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Part_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Part_Cost)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PartsId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PartsId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PartsId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

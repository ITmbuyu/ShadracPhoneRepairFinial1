                    <li><a asp-area="" asp-controller="Home" asp-action="AdminRepairs" class="nav-link text-dark">Repairs</a></li>
                    <li style="text-align:right"> @Html.Partial("_LoginPartial")</li>
                }
                @if(SignInManager.IsSignedIn(User) && User.IsInRole("Technician"))

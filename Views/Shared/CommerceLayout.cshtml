                    <li><a asp-area="" asp-controller="Home" asp-action="Index" class="nav-link text-dark">Home</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="TechnicianRepairs" class="nav-link text-dark">Repairs</a></li>

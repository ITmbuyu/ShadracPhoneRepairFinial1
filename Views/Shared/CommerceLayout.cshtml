                    <li><a asp-area="" asp-controller="Home" asp-action="DriverDash" class="nav-link text-dark">Driver Dashboard</a></li>
                    <li style="text-align:right"> @Html.Partial("_LoginPartial")</li>
                }
                @if(SignInManager.IsSignedIn(User) && User.IsInRole("Customer"))
                {
                    <li><a asp-area="" asp-controller="Home" asp-action="Index" class="nav-link text-dark">Home</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="CustomerPurchase" class="nav-link text-dark">Customer Purchase</a></li>
